                                    <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#labEssentialsModal">View Lab Essentials</button>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="./images/notes.jpg" class="card-img-top" alt="Notes" style="width: 100%; height: 225px; object-fit: cover;">

    <link href="/css/header.css" rel="stylesheet">
    
    
    
    
</head>
<body>

  <%- include("header") %>
    
<main>


    <div class=" my-5">
        <div id="unique" class="rounded bg-white p-4">
          <h3 class="text-center">Product Upload</h3>
          <form id="upload-product-form"action="/products/uploadProduct" method="POST" novalidate enctype="multipart/form-data">
            <div class="row">
                <!-- Left Section (Profile Picture) -->
                <div class="col-md-4 border-end d-flex flex-column align-items-center text-center p-3 py-5">
                    <label for="imageUpload" class="position-relative">
                        <img id="profileImage" class="my_pfp rounded-circle mt-5" width="150px" src="./images/imageup.jpg" alt="Profile Picture" style="cursor: pointer;">
                        <i class="bi bi-camera-fill position-absolute bottom-0 end-0 mb-1 me-1" style="font-size: 30px; color:#3B445b"></i>
                    </label>
                    <input type="file" class="form-control mt-3" id="imageUpload" name="image_url" accept="image/*" onchange="previewImage(event)" style="display: none;">
                    <span id="displayFirstName" class="font-weight-bold">Upload image</span>
                </div>

                <!-- Middle Section (Product Upload Form) -->
                <div class="col-md-8">
                    <div class="p-3 py-5">
                       
                             

                              
                                    <div class="row mt-2">
                                        <!-- Category -->
                                        <div class="col-md-6">
                                            <label class="labels">Category</label>
                                            <select class="form-select" id="categorySelect" name="category" required>
                                                <option value="" disabled selected>Choose Category</option>
                                                <option value="Stationery">Stationery</option>
                                                <option value="Lab">Lab Essentials</option>
                                                <option value="Notes">Notes</option>
                                                <option value="Furniture">Furniture</option>
                                                <option value="Fashion">Fashion</option>
                                                <option value="Others">Others</option>
                                            </select>
                                            <div class="invalid-feedback">Please select a category.</div>
                                        </div>
                                        <!-- Name of Product -->
                                        <div class="col-md-6">
                                            <label class="labels">Name of Product</label>
                                            <select class="form-select" id="productNameSelect" name="product_name" required>
                                                <option value="" disabled selected>Choose Product</option>
                                            </select>
                                            <div class="invalid-feedback">Please select a product name.</div>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <!-- Model Name -->
                                        <div class="col-md-12">
                                            <label class="labels">Model Name</label>
                                            <input type="text" class="form-control" id="modelName" name="model_name" placeholder="Enter model name" maxlength="50" required>
                                            <div class="invalid-feedback">This is a required field.</div>
                                        </div>
                                        <!-- Number of Years Old -->
                                        <div class="col-md-12">
                                            <label class="labels">Number of Years Old</label>
                                            <select class="form-select" id="yearsOldSelect" name="age_in_years" required>
                                                <option value="" disabled selected>Choose Age</option>
                                                <option value="1">1 Year</option>
                                                <option value="2">2 Years</option>
                                                <option value="3">3 Years</option>
                                                <option value="4">4+ Years</option>
                                            </select>
                                            <div class="invalid-feedback">Please select a valid age.</div>
                                        </div>
                                        <!-- Description (Optional) -->
                                        <div class="col-md-12">
                                            <label class="labels">Description (Optional)</label>
                                            <textarea id="descriptionField" class="form-control" name="description" placeholder="Enter product description" rows="4"></textarea>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                      
                                    </div>
                                    <div class="row mt-3">
                                        <!-- Price -->
                                        <div class="col-md-12">
                                            <label class="labels">Price</label>
                                            <input type="number" id="priceField" class="form-control" name="price" placeholder="Enter price per day" min="0" step="0.01" required>
                                            <div class="invalid-feedback">Please enter a valid price.</div>
                                        </div>
                                    </div>
                                  
                                    <div class="mt-5 text-center">
                                        <button class="btn btn-primary profile-button" id="uploadButton" type="submit">Upload Product</button>
                                        <!-- <button id="submitButton" class="btn btn-primary profile-button" type="submit" disabled>Upload Product</button> -->

                                    </div>
                                </form>
                                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

   
  
